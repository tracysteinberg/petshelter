<form method="post" action="/owners/<%=@owner.owner_id%>">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value="<%=@owner.first_name%>"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  value="<%=@owner.last_name%>"
  />

  <label for="pet-type-field">Pet Wanted:</label>
  <input
  type="text"
  name="pet_type"
  id="pet-type-field"
  value="<%=@owner.pet_type%>"
  />



  <label for="owner-photo-field">Owner Photo:</label>
  <input
  type="text"
  name="owner_photo"
  id="owner-photo-field"
  value="<%=@owner.owner_photo%>"
  />


  <% @owner.pets.each do |pet| %>  
    <p>Pet Name: <%=pet.pet_name%></p>
    <img src="<%=pet.pet_photo%>"/>
  <% end %>

  <input type="submit" value="Update Owner"/>
  </form>


